<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.zoostructure.Controllers.CompositeEnclosureViewController">
   <children>
      <HBox alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="sectionNameLabel" text="Big Cats">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>
            <Region prefHeight="0.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="newSectionButton" alignment="CENTER" mnemonicParsing="false" style="-fx-background-radius: 15; -fx-border-color: 5b5b5b; -fx-border-radius: 15;" text="New Section" textAlignment="CENTER">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
               <padding>
                  <Insets bottom="5.0" left="8.0" right="8.0" top="5.0" />
               </padding>
            </Button>
         </children>
      </HBox>
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <BorderPane style="-fx-border-color: #000000; -fx-background-color: #f5f5f5;" HBox.hgrow="ALWAYS">
               <top>
                  <Label text="Lions" BorderPane.alignment="CENTER">
                     <font>
                        <Font size="14.0" />
                     </font></Label>
               </top>
               <HBox.margin>
                  <Insets left="2.0" right="2.0" />
               </HBox.margin>
               <effect>
                  <DropShadow blurType="GAUSSIAN" />
               </effect>
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding>
               <center>
                  <Pane minHeight="100.0" minWidth="200.0" style="-fx-background-color: #967405;" BorderPane.alignment="CENTER" />
               </center>
               <bottom>
                  <Button fx:id="lionViewButton" mnemonicParsing="false" onAction="#onLionViewButtonClick" text="View" BorderPane.alignment="CENTER_LEFT">
                     <BorderPane.margin>
                        <Insets bottom="2.0" left="5.0" top="5.0" />
                     </BorderPane.margin>
                  </Button>
               </bottom>
            </BorderPane>
            <BorderPane layoutX="10.0" layoutY="10.0" style="-fx-border-color: #000000; -fx-background-color: #f5f5f5;" HBox.hgrow="ALWAYS">
               <top>
                  <Label text="Tigers" BorderPane.alignment="CENTER">
                     <font>
                        <Font size="14.0" />
                     </font></Label>
               </top>
               <HBox.margin>
                  <Insets left="2.0" right="2.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding>
               <effect>
                  <DropShadow />
               </effect>
               <center>
                  <Pane minHeight="100.0" minWidth="200.0" style="-fx-background-color: ce760a;" BorderPane.alignment="CENTER" />
               </center>
               <bottom>
                  <Button fx:id="tigerViewButton" mnemonicParsing="false" onAction="#onTigerViewButtonClick" text="View" BorderPane.alignment="CENTER_LEFT">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <BorderPane.margin>
                        <Insets bottom="2.0" left="5.0" top="5.0" />
                     </BorderPane.margin>
                  </Button>
               </bottom>
            </BorderPane>
            <BorderPane layoutX="212.0" layoutY="10.0" style="-fx-border-color: #000000; -fx-background-color: #f5f5f5;" HBox.hgrow="ALWAYS">
               <top>
                  <Label text="Cougars" BorderPane.alignment="CENTER">
                     <font>
                        <Font size="14.0" />
                     </font></Label>
               </top>
               <HBox.margin>
                  <Insets left="2.0" right="2.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding>
               <effect>
                  <DropShadow />
               </effect>
               <center>
                  <Pane minHeight="100.0" minWidth="200.0" style="-fx-background-color: C2B280;" BorderPane.alignment="CENTER" />
               </center>
               <bottom>
                  <Button fx:id="cougarViewButton" mnemonicParsing="false" onAction="#onCougarViewButtonClick" text="View" BorderPane.alignment="CENTER_LEFT">
                     <BorderPane.margin>
                        <Insets bottom="2.0" left="5.0" top="5.0" />
                     </BorderPane.margin>
                  </Button>
               </bottom>
            </BorderPane>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
